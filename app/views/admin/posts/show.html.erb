<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-9 mx-auto shadow-lg rounded px-0 my-5 bg-white">
      <div class="mb-3 p-3 border rounded">

        <div class="d-flex align-items-center mb-2">
          <% post_user_image_path = @post.user.get_profile_image(50, 50) %>
          <%= image_tag post_user_image_path, class: "rounded-circle me-3", size: "50x50" %>
          <h5 class="mb-0"><%= @post.comedian_name %></h5>
        </div>
        <div class="content-area">
          <p>ネタ : <%= @post.title %></p>
          <p><%= simple_format(@post.body) %></p>
        </div>
          <p><%= render "layouts/star", post: @post %></p>
        <div class="content-area mb-3">
          <span><%= link_to @post.user.name, admin_user_path(@post.user)  %></span>
          <span class="mx-2"> | </span>
          <span><%= render "layouts/btn", post: @post %></span>
          <span class="mx-2"> | </span>
          <span>
            <% @post.tags.each_with_index do |tag, i| %>
              <%= link_to tag.name, admin_search_path(content: tag.name, model: "tag", method: "perfect") %><%= ',' unless i == @post.tags.size - 1 %>
            <% end %>
          </span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <div>
            <%= link_to "削除", admin_post_path(@post.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
          </div>
          <small class="text-muted">
            投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %>
          </small>
        </div>

        <!--コメント部分-->
        
        <div class="container my-4 p-0">
          <p class="fw-bold mb-3">コメント件数: <%= @post.post_comments.count %></p>

          <% @post.post_comments.each do |post_comment| %>
            <div class="card mb-3">
              <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                  <% if post_comment.user %>
                    <% comment_user_image_path = post_comment.user.get_profile_image(50, 50) %>
                    <%= image_tag comment_user_image_path, class: "rounded-circle me-3", size: "50x50" %>
                    <strong><%= link_to post_comment.user.name, admin_user_path(post_comment.user) %></strong>
                  <% else %>
                    <strong>未登録ユーザー</strong>
                  <% end %>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                  <div class="fw-semibold"><%= post_comment.comment %></div>
                  <div>
                    <small class="text-muted me-3">
                      <%= post_comment.created_at.present? ? post_comment.created_at.strftime('%Y/%m/%d') : '日付なし' %>
                    </small>
                    <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>