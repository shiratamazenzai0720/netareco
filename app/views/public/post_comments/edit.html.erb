<div class="container mt-4 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <div class="shadow rounded">
        <div class="p-3 border-bottom bg-white text-center">
          <h2 class="mb-0 mt-4">コメント編集</h2>
        </div>

        <div class="p-4 bg-white text-left">
          <%= form_with(model: [ @post_comment.post, @post_comment ], local: true) do |f| %>
            <%= f.text_area :comment, rows:3, class: "form-control mb-3" %>
            <div class="d-flex align-items-center">
              <%= f.submit '更新', class: "btn btn-primary" %>
              <%= link_to "削除", post_post_comment_path(@post_comment.post, @post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger ml-3" %>
              <%= link_to "戻る", post_path(@post_comment.post), class: "btn btn-secondary ml-auto" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
        
