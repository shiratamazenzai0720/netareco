<div class="container mt-4 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-9">
      <div class="shadow rounded">
        <div class="p-3 border-bottom bg-white text-center">
          <h2 class="mb-0 mt-4">プロフィール編集</h2>
        </div>

        <div class="p-4 bg-white text-left">
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <%= @user.errors.count %>件のエラーが発生しました
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-4 text-center">
            <% profile_image_path = @user.get_profile_image(100, 100) %>
            <%= image_tag profile_image_path, class: "img-fluid rounded-circle mt-4", size: "100x100" %>
          </div>

          <%= form_with model: @user do |f| %>
            <label for="inputName">ユーザーネーム</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "ユーザーネーム", class: "form-control mb-3" %>

            <label for="inputEmail">メールアドレス</label>
            <%= f.text_field :email, id: "inputEmail", placeholder: "メールアドレス", class: "form-control mb-3" %>

            <label for="inputImage">プロフィール画像</label>
            <%= f.file_field :profile_image, accept: "image/*", class: "form-control mb-3" %>

            <%= f.submit "変更を保存", class: "btn btn-primary" %>

            <% if @user == current_user %>
              <%= link_to "退会", user_path(@user.id), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger ms-3" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>