<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-9 mx-auto shadow-lg rounded px-0 my-5 bg-white">
      <div class="mb-3 p-3 border rounded">
        <div class="d-flex align-items-center mb-2">
          <%= image_tag @post.user.get_profile_image(50, 50), class: "rounded-circle me-3" %>
          <strong><%= @post.user.name %></strong>
        </div>
        <div class="content-area">
          <p>タイトル : <%= @post.title %></p>
          <p>本文 : <%= @post.body %></p>
        </div>

        <!-- タグ部分 -->
        <p>
        タグ：
        <% @post.tags.each_with_index do |tag, i| %>
          <%= link_to tag.name, search_path(content: tag.name, model: "tag", method: "perfect") %><%= ',' unless i == @post.tags.size - 1 %>
        <% end %>
      </p>
        <!-- ここまで -->

        <div class="d-flex justify-content-between align-items-center">
          <div>
            <% if current_user == @post.user %>
              <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-sm btn-success me-2" %>
              <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
          <small class="text-muted">
            投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %>
          </small>
        </div>

      <!-- コメント一覧 -->
      <div class="container my-4">
      <p class="fw-bold mb-3">コメント件数: <%= @post.post_comments.count %></p>
    
      <% @post.post_comments.each do |post_comment| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex align-items-center mb-2">
              <% if post_comment.user %>
                <%= image_tag post_comment.user.get_profile_image(50, 50), class: "rounded-circle me-3" %>
                <strong><%= post_comment.user.name %></strong>
              <% end %>
            </div>
    
            <div class="d-flex justify-content-between align-items-center">
              <div class="fw-semibold"><%= post_comment.comment %></div>
              <div>
                <small class="text-muted me-3">
                  <%= post_comment.created_at.present? ? post_comment.created_at.strftime('%Y/%m/%d') : '日付なし' %>
                </small>
                <% if current_user == post_comment.user %>
                  <%= link_to "編集", edit_post_post_comment_path(post_comment.post, post_comment), class: "btn btn-sm btn-success me-2" %>
                  <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

        <!-- コメント投稿フォーム -->
          <% unless current_user&.guest_user? %>
            <%= form_with(model: [ @post, @post.post_comments.build ], local: true) do |f| %>
              <div class="mb-3">
                <%= f.text_area :comment, rows: 5, placeholder: "コメントをここに", class: "form-control" %>
              </div>
              <div>
                <%= f.submit "送信する", class: "btn btn-primary" %>
              </div>
            <% end %>
          <% else %>
            <p>ゲストユーザーはコメント投稿ができません。</p>
          <% end %>
    </div>
  </div>
</div>